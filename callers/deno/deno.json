{
  "compilerOptions": {
    "strict": true,
    "lib": ["deno.window"]
  },
  "imports": {},
  "lint": {
    "rules": {
      "tags": ["recommended"]
    },
    "exclude": ["build/"]
  },
  "tasks": {
    "start": "deno run --allow-net src/main.ts",
    "lint": "deno lint src/",
    "lint:fix": "deno lint --fix src/",
    "check": "deno lint src/ && deno check src/"
  }
}

