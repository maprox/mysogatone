{
  "compilerOptions": {
    "strict": true,
    "lib": ["deno.window"]
  },
  "imports": {
    "@src/": "./src/",
    "@shared/": "../../shared/"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    },
    "plugins": ["./import-order-config.ts"],
    "exclude": ["build/"]
  },
  "fmt": {
    "files": {
      "include": ["src/", "tests/", "scripts/"],
      "exclude": ["build/"]
    }
  },
  "tasks": {
    "start": "deno run --allow-net --allow-read --allow-write --allow-env src/main.ts",
    "lint": "deno lint src/",
    "lint:fix": "deno lint --fix src/",
    "format": "deno fmt src/",
    "format:check": "deno fmt --check src/",
    "check": "deno lint src/ && deno check src/",
    "test": "deno test --allow-net --allow-read --allow-write tests/",
    "test:socks5": "deno run --allow-net --allow-env scripts/test-socks5-server.ts",
    "test:socks5:simple": "deno run --allow-net --allow-env scripts/test-socks5-simple.ts"
  }
}

