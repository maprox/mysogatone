{
  "compilerOptions": {
    "strict": true,
    "lib": ["deno.window"]
  },
  "imports": {
    "@src/": "./src/",
    "@shared/": "../../shared/"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    },
    "exclude": ["build/"]
  },
  "tasks": {
    "start": "deno run --allow-net --allow-read --allow-write src/main.ts",
    "lint": "deno lint src/",
    "lint:fix": "deno lint --fix src/",
    "check": "deno lint src/ && deno check src/",
    "test": "deno test --allow-net --allow-read --allow-write tests/"
  }
}

